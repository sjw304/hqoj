<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.quezr.hqoj.mapper.ProblemMapper">

<!--    <cache-ref namespace="top.quezr.hqoj.mapper.ProblemMapper"/>-->

    <select id="getProblemList" resultType="top.quezr.hqoj.entity.Problem">
        select id, name, point, level, tags, `like`, unlike
        from problem
        <where>
            <if test="level!=null">
                level = #{level}
            </if>
            <if  test="tagSearch!=null">
                AND json_contains(tags->"$", '${tagSearch}')
            </if>
            <if test="lastId>0">
                AND id > #{lastId}
            </if>
        </where>
        limit
        <if test="lastId==0 and pageFrom!=0">
            #{pageFrom},
        </if>
        #{pageSize}
    </select>
    <select id="getProblemListTotalCount" resultType="java.lang.Integer">
        select count(*) as totalCount
        from problem
        <where>
            <if test="level!=null">
                level = #{level}
            </if>
            <if  test="tagSearch!=null">
                AND json_contains(tags->"$", '${tagSearch}')
            </if>
        </where>
    </select>
</mapper>
